<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.junce.ssm.dao.UserDao">

    <resultMap id="UserBaseMap" type="com.junce.ssm.model.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="user_phone" property="userPhone" jdbcType="VARCHAR"/>
        <result column="password" property="userPwd" jdbcType="VARCHAR"/>
        <result column="create_date" property="createTime" jdbcType="DATE"/>
    </resultMap>

    <select id="selectUserByPhoneOrName" resultMap="UserBaseMap">
        SELECT * FROM eip_user
        WHERE user_phone=#{userPhone}
        OR user_name=#{userName}
    </select>

    <insert id="addUser" parameterType="com.junce.ssm.model.User">
        INSERT  into eip_user (user_id,user_phone,user_name,password,create_date) VALUES (#{userId},#{userPhone},#{userName},#{userPwd},#{createTime})
    </insert>

</mapper>