<mapper namespace="com.junce.ssm.dao.ShowDao">

    <resultMap id="getShowList" type="java.util.HashMap">
        <result column="show_id" property="showId" jdbcType="FLOAT"></result>
        <result column="show_team" property="showTeam" jdbcType="VARCHAR"></result>
        <result column="show_name" property="showName" jdbcType="VARCHAR"></result>
        <result column="show_time" property="showTime" jdbcType="VARCHAR"></result>
        <result column="show_desc" property="showDesc" jdbcType="VARCHAR"></result>
        <result column="show_resource_id" property="showResourceId" jdbcType="FLOAT"></result>
        <result column="resource_url" property="resourceUrl" jdbcType="VARCHAR"></result>
        <result column="resource_type" property="resourceType" jdbcType="VARCHAR"></result>
    </resultMap>


    <select id="getShowList" resultMap="getShowList" parameterType="com.junce.ssm.model.ShowListBean">
      SELECT * from dream_show ds, dream_show_resource dsr
      WHERE dsr.resource_id = ds.show_resource_id
    </select>


